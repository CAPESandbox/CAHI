/var/log/suricata/*.log /var/log/suricata/*.json {
    {{ logrotate_suricata_schedule }}
    rotate {{ logrotate_suricata_rotate }}
    missingok
    compress
    delaycompress
    sharedscripts
    postrotate
        /bin/kill -HUP `cat /var/run/suricata.pid 2> /dev/null` 2> /dev/null || true
    endscript
}
